{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with MSBuild",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}\\MyProject.vcxproj",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}