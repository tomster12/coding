{
    "configurations": [

        {
            "name": "Debug build/file.exe",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}.exe",
            "cwd": "${fileDirname}",
            "args": [],
            "environment": [],
            
            "request": "launch",
            "type": "cppdbg",
            "MIMode": "gdb",
            "stopAtEntry": false,
            "externalConsole": false,
            
            "miDebuggerPath": "D:/Files/Software/w64devkit/bin/gdb.exe",

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
